
<h1>Messages</h1>
<div class="container">
<hr>
<h3>Received requests</h3>
<% if current_user.is_chef? %>
<ul>
  <% Booking.all.each do |booking| %>
  <% if current_user.id == booking.chef.user_id %>
  <li class="message">
    <div class="message-name">
      <h4>New request</h4>
    </div>
    <div class="message-body">
      <p>You received a new request from <%= link_to User.find(booking.user_id).email, "#"  %> </p>
      <p> <%= booking.created_at %> </p>
    </div>
    <div class="message-status">
      <p> Confirm </p>
    </div>
  </li>
  <% end %>
  <% end %>
  <% else %>
  <ul>
    <p>
      <h4></h4>
    </p>
  </ul>
  <% end %>
</ul>
<hr>
<h3>Sent requests</h3>
<ul>
  <% Booking.all.each do |booking| %>
  <% if current_user.id == booking.user_id%>
  <li class="message">
    <div class="message-name">
      <h4> You've sent a new request!</h4>
    </div>
    <div class="message-body">
      <p>Chef you've requested: <%= link_to Chef.find(booking.chef.id).name, "#"  %> </p>
      <p> <%= booking.created_at %> </p>
    </div>
    <div class="message-status">
      <p> Pending </p>
    </div>
  </li>
    <hr>
    <% end %>
    <% end %>
  </ul>
</div>

