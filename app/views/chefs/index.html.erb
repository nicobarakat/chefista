<div class="container">
  <div class="row">
    <% @chefs.each do |chef| %>
      <div class="card">
        <div class="col-xs-12 col-sm-4">
          <div class="card-picture">
             <%= link_to "", chef_path(chef), class: "card-link" %>
          </div>
          <div class="chef-details row">
            <%= link_to chef_path(chef) do %>
            <div class="col-xs-8">
              <div class="chef-name">
                <h4> <%= chef.name %> </h4>
                <p> <%= chef.title %> </p>
              </div>
            </div>
            <div class="col-xs-4">
              <div class="price">
                <span><%= chef.price %>â‚¬</span> <span>pp</span>
              </div>
            </div>
            <% end %>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>">
</div>

